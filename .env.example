# Database
DATABASE_URL=sqlite:///./rightmove.db

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# Logging
LOG_LEVEL=INFO

# Scraper settings
SCRAPER_REQUEST_TIMEOUT=30
SCRAPER_RETRY_ATTEMPTS=3
SCRAPER_RETRY_BACKOFF=1.0
SCRAPER_DELAY_BETWEEN_REQUESTS=0.5
SCRAPER_FRESHNESS_DAYS=7

# EPC API (register free at https://epc.opendatacommunities.org/)
EPC_API_EMAIL=
EPC_API_KEY=

# Rate limiting (slowapi format: "N/period")
RATE_LIMIT_SCRAPE=5/minute
RATE_LIMIT_DEFAULT=60/minute
