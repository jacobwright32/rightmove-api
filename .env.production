# Production environment template
# Copy to .env and fill in values: cp .env.production .env

# Database (absolute path for systemd)
DATABASE_URL=sqlite:////opt/uk-house-prices/uk_house_prices.db

# Data directory (absolute path for systemd)
DATA_DIR=/opt/uk-house-prices/data

# CORS â€” set to your domain or server IP
CORS_ORIGINS=http://yourdomain.com,https://yourdomain.com

# Logging
LOG_LEVEL=INFO

# Scraper settings
SCRAPER_REQUEST_TIMEOUT=30
SCRAPER_RETRY_ATTEMPTS=3
SCRAPER_RETRY_BACKOFF=1.0
SCRAPER_DELAY_BETWEEN_REQUESTS=1.0
SCRAPER_FRESHNESS_DAYS=7

# EPC API (register free at https://epc.opendatacommunities.org/)
EPC_API_EMAIL=
EPC_API_KEY=

# Rate limiting
RATE_LIMIT_SCRAPE=10/minute
RATE_LIMIT_DEFAULT=60/minute
